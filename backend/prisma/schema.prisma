generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id
  uuid           String @unique
  username       String
  icon_url       String
  status         String
  status_message String
  introduction   String

  created_rooms Room[]
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model Room {
  id       String @id
  roomname String
  owner_id String

  created_by User     @relation(fields: [owner_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
