generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String @id
  uuid           String @unique
  username       String
  icon_url       String
  status         String
  status_message String
  introduction   String

  from_users    Friends[]      @relation("from_users")
  to_users      Friends[]      @relation("to_users")
  created_rooms Room[]

  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}

model Room {
  id       String @id @default(uuid())
  roomname String
  owner_id String

  created_by User     @relation(fields: [owner_id], references: [id])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Friends {
  id        String @id @default(uuid())
  from_id   String
  to_id     String
  status    FriendStatus
  from_user User   @relation("from_users", fields: [from_id], references: [id])
  to_user   User   @relation("to_users", fields: [to_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([from_id, to_id])
}

enum FriendStatus {
  PENDING
  ACCEPTED
  REJECTED
  BLOCKED
}